<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="78dp"
        android:layout_height="101dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customborder"
        android:src="@drawable/click_to_add_image"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="הרשם למערכת"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />


    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/signup_email"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:width="24dp"
        android:background="@drawable/rounded_corner_view"
        android:drawableLeft="@drawable/baseline_email_24"
        android:ems="10"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:text="omerh@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.186" />


    <EditText
        android:id="@+id/signup_password"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_view"
        android:drawableLeft="@drawable/baseline_password_24"
        android:ems="10"
        android:hint="סיסמה"
        android:inputType="textPassword"
        android:text="1234"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286" />

    <EditText
        android:id="@+id/signup_passwordVerify"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_view"
        android:drawableLeft="@drawable/baseline_password_24"
        android:ems="10"
        android:hint="אימות סיסמה"
        android:inputType="textPassword"
        android:text="1234"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <EditText
        android:id="@+id/signup_user"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_view"
        android:drawableLeft="@drawable/baseline_person_24"
        android:ems="10"
        android:hint="שם המשתמש"
        android:inputType="textPersonName"
        android:text="omerh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <EditText
        android:id="@+id/signup_phonenumber"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_view"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:ems="10"
        android:hint="טלפון"
        android:inputType="textPersonName"
        android:text="0528877661"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:text="הרשמה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <Button
        android:id="@+id/backToLoginButtom"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:text="חזרה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <ProgressBar
        android:id="@+id/bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="221dp"
        android:layout_height="84dp"
        android:visibility="invisible"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

</androidx.constraintlayout.widget.ConstraintLayout>